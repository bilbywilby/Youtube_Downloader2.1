    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: YouTube Downloader",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/youtube_downloader.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": []
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/run_tests.py",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ],
    "compounds": [
        {
            "name": "Python: Debug All",
            "configurations": ["Python: YouTube Downloader", "Python: Debug Tests"]
        }
    ]
}